<!DOCTYPE html>
<html lang="en">
<!-- Hiya! Nice to see you here! -->

<!-- GENERATED FROM collection.html.jinja -->

<head>
    <title>The Sass</title>

    <meta name="description" content="{{ collection.name }}">
    {{ site.head }}
</head>

<body>
    <h1 class="music-name"><a href="/#music" class="unformatted-link">The Sass</a></h1>
    <p>
        <noscript><a href="../index.html#music"></noscript><button
            onclick="window.location.href = '../index.html#music'">Back to Site</button><noscript></a></noscript>
    </p>
    <div id="content" class="music-page">
        <h2>{{ collection.name }}</h2>
        <div id="about">
            <p>{{ collection.description }}</p>
        </div>
        <div id="collection-links">
            {% macro streamLink(streamLink, social) -%}
                {% if streamLink is defined %}
                <p class="collection-link">
                    <img src="../{{ social.icon }}" width="32" height="32" class="social-icon-scale">
                    {% if streamLink.comingSoon is defined %}
                        <span class="collection-link">Coming Soon!</span>
                    {% else %}
                        <a href="{{ streamLink.link }}" class="collection-link" target="_blank">{{ streamLink.type }}</a>
                    {% endif %}
                </p>
                {% endif %}
            {%- endmacro %}

            {{ streamLink(collection.streamLinks.youtubeLink, site.nitroguy.socials.youtube) }}
            {{ streamLink(collection.streamLinks.soundcloudLink, site.nitroguy.socials.soundcloud) }}
            {{ streamLink(collection.streamLinks.bandcampLink, site.nitroguy.socials.bandcamp) }}
            {{ streamLink(collection.streamLinks.spotifyLink, site.nitroguy.socials.spotify) }}
            {{ streamLink(collection.streamLinks.appleMusicLink, site.nitroguy.socials.appleMusic) }}
            {{ streamLink(collection.streamLinks.newgroundsLink, site.nitroguy.socials.newgrounds) }}
            {{ streamLink(collection.streamLinks.iTunesLink, site.nitroguy.socials.iTunes) }}
            {{ streamLink(collection.streamLinks.pandoraLink, site.nitroguy.socials.pandora) }}
            {{ streamLink(collection.streamLinks.deezerLink, site.nitroguy.socials.deezer) }}
            {{ streamLink(collection.streamLinks.tidalLink, site.nitroguy.socials.tidal) }}
            {{ streamLink(collection.streamLinks.amazonMusicLink, site.nitroguy.socials.amazonMusic) }}
            {{ streamLink(collection.streamLinks.iHeartRadioLink, site.nitroguy.socials.iHeartRadio) }}
        </div>
        <div id="eachTrack">
            <table id="songList">
                {% for song in collection.songs %}
                <tr class="songInfo" id="{{ song.safeName }}">
                    <td id="song-desc-1" class="on-collection-page"><strong class="song-name">{{ song.name }}</strong>
                        <p>{{ song.description }}</p>
                    </td>
                    <td id="song-desc-2" class="on-collection-page">
                        <p class="cover"><a href="../songs/{{ song.safeName }}.html"><img class="cover-image"
                                    src="../artwork/{{ song.coverLink }}" width="250" height="250"></a></p>
                        <h3>Released: {{ song.releaseDateFormatted }}</h3>
                        <h3>Genre: {{ song.genre }}</h3>
                        <h3>
                            {% for link in song.downloadLinks %}
                            <a href="{{ song.downloadLinks[link].link }}" target="_blank">({{
                                song.downloadLinks[link].type }})</a>
                            {% endfor %}
                            {#
                            {% for link in song.streamLinks %}
                            <a href="{{ song.streamLinks[link].link }}" class="stream" target="_blank">({{
                                song.streamLinks[link].type }})</a>
                            {% endfor %}
                            #}
                        </h3>
                    </td>
                </tr>
                {% endfor %}
            </table>

        </div>
    </div>

    {{ site.footer }}

</body>

</html>