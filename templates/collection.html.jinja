<!DOCTYPE html>
<html lang="en">
<!-- Hiya! Nice to see you here! -->

<!-- GENERATED FROM collection.html.jinja -->

<head>
    <title>The Sass</title>

    <meta name="description" content="{{ collection.name }}">
    {{ site.head }}
</head>

<body>
    <h1 class="music-name">The Sass</h1>
    <p>
        <noscript><a href="../index.html#music"></noscript><button
            onclick="window.location.href = '../index.html#music'">Back to Site</button><noscript></a></noscript>
    </p>
    <div id="content" class="music-page">
        <h2>{{ collection.name }}</h2>
        <div id="about">
            <p>{{ collection.description }}</p>
        </div>
        <div id="collection-links">
            {% if collection.streamLinks.youtubeLink is defined %}
            <p class="collection-link"><img src="../{{ site.nitroguy.socials.youtube.icon }}" width="32" height="32"
                    class="social-icon-scale"><a href="{{ collection.streamLinks.youtubeLink.link }}" class="collection-link"
                    target="_blank">YouTube</a>
            </p>
            {% endif %}
            {% if collection.streamLinks.soundcloudLink is defined %}
            <p class="collection-link"><img src="../{{ site.nitroguy.socials.soundcloud.icon }}" width="32" height="32"
                    class="social-icon-scale"><a href="{{ collection.streamLinks.soundcloudLink.link }}" class="collection-link"
                    target="_blank">SoundCloud</a></p>
            {% endif %}
            {% if collection.streamLinks.newgroundsLink is defined %}
            <p class="collection-link"><img src="../{{ site.nitroguy.socials.newgrounds.icon }}" width="32" height="32"
                    class="social-icon-scale"><a href="{{ collection.streamLinks.newgroundsLink.link }}" class="collection-link"
                    target="_blank">Newgrounds</a></p>
            {% endif %}
        </div>
        <div id="eachTrack">
            <table id="songList">
                {% for song in collection.songs %}
                <tr class="songInfo" id="{{ song.safeName }}">
                    <td id="song-desc-1" class="on-collection-page"><strong class="song-name">{{ song.name }}</strong>
                        <p>{{ song.description }}</p>
                    </td>
                    <td id="song-desc-2" class="on-collection-page">
                        <p class="cover"><a href="../songs/{{ song.safeName }}.html"><img class="cover-image"
                                    src="../artwork/{{ song.coverLink }}" width="250" height="250"></a></p>
                        <h3>Released: {{ song.releaseDateFormatted }}</h3>
                        <h3>Genre: {{ song.genre }}</h3>
                        <h3>
                            {% for link in song.downloadLinks %}
                            <a href="{{ song.downloadLinks[link].link }}" target="_blank">({{
                                song.downloadLinks[link].type }})</a>
                            {% endfor %}
                            {#
                            {% for link in song.streamLinks %}
                            <a href="{{ song.streamLinks[link].link }}" class="stream" target="_blank">({{
                                song.streamLinks[link].type }})</a>
                            {% endfor %}
                            #}
                        </h3>
                    </td>
                </tr>
                {% endfor %}
            </table>

        </div>
    </div>

    {{ site.footer }}

</body>

</html>