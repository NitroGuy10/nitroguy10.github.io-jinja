<!DOCTYPE html>
<html lang="en">
<!-- Hiya! Nice to see you here! -->

<!-- GENERATED FROM song.html.jinja -->

<head>
    <title>The Sass</title>

    <meta name="description" content="{{ song.name }}">
    {{ site.head }}
</head>

<body>
    <h1 class="music-name">The Sass</h1>
    <div id="content" class="music-page">
        <div id="eachTrack">
            <table id="songList" class="song-table">
                <tr class="songInfo">
                    <td id="song-desc-1" class="on-song-page">
                        <h4>{{ song.name }}</h4>
                        <p>{{ song.description }}</p>
                    </td>
                    <td id="song-desc-2" class="on-song-page">
                        <p class="cover"><img src="../artwork/{{ song.coverLink }}" class="cover-image" width="250"
                                height="250"></p>
                        <h3>Released: {{ song.releaseDateFormatted }}</h3>
                        <h3>Genre: {{ song.genre }}</h3>
                        <h3>Collection: <a href="../collections/{{ song.safeCollection }}.html">{{ song.collection
                                }}</a></h3>
                        <hr>
                        <h3 class="download">Free Download: <p>
                                {% for link in song.downloadLinks %}
                                <a href="{{ song.downloadLinks[link].link }}" class="download-link" target="_blank">({{
                                    song.downloadLinks[link].type }})</a>
                                {% endfor %}
                            </p>
                        </h3>
                        <hr>
                        <h3>
                            {% if song.streamLinks.youtubeLink is defined %}
                            <p class="other-links"><img src="../{{ site.nitroguy.socials.youtube.icon }}" width="32" height="32"
                                    class="social-icon-scale"><a href="{{ song.streamLinks.youtubeLink.link }}"
                                    class="other-links" target="_blank">YouTube</a>
                            </p>
                            {% endif %}
                            {% if song.streamLinks.soundcloudLink is defined %}
                            <p class="other-links"><img src="../{{ site.nitroguy.socials.soundcloud.icon }}" width="32" height="32"
                                    class="social-icon-scale"><a href="{{ song.streamLinks.soundcloudLink.link }}"
                                    class="other-links" target="_blank">SoundCloud</a></p>
                            {% endif %}
                            {% if song.streamLinks.newgroundsLink is defined %}
                            <p class="other-links"><img src="../{{ site.nitroguy.socials.newgrounds.icon }}" width="32" height="32"
                                    class="social-icon-scale"><a href="{{ song.streamLinks.newgroundsLink.link }}"
                                    class="other-links" target="_blank">Newgrounds</a></p>
                            {% endif %}
                        </h3>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br>
    <br>
    <footer>
        <a class="main-site" href="../index.html#music">Main Site</a>
    </footer>

    {{ site.footer }}

</body>

</html>