<!DOCTYPE html>
<html lang="en">
<!-- Hiya! Nice to see you here! -->

<!-- GENERATED FROM song.html.jinja -->

<head>
    <title>The Sass</title>

    <meta name="description" content="{{ song.name }}">
    {{ site.head }}
</head>

<body>
    <h1 class="music-name"><a href="/#music" class="unformatted-link">The Sass</a></h1>
    <div id="content" class="music-page">
        <div id="eachTrack">
            <table id="songList" class="song-table">
                <tr class="songInfo">
                    <td id="song-desc-1" class="on-song-page">
                        <h4>{{ song.name }}</h4>
                        <p>{{ song.description }}</p>
                    </td>
                    <td id="song-desc-2" class="on-song-page">
                        <p class="cover"><img src="../artwork/{{ song.coverLink }}" class="cover-image" width="250" height="250"></p>
                        <h3>Released: {{ song.releaseDateFormatted }}</h3>
                        <h3>Genre: {{ song.genre }}</h3>
                        <h3>Collection: <a href="../collections/{{ song.safeCollection }}.html">{{ song.collection }}</a></h3>
                        <hr>
                        <h3 class="download">Free Download:
                            <p>
                                {% for link in song.downloadLinks %}
                                <a href="{{ song.downloadLinks[link].link }}" class="download-link" target="_blank">({{ song.downloadLinks[link].type }})</a>
                                {% endfor %}
                            </p>
                        </h3>
                        <hr>
                        <h3>
                            {% macro streamLink(streamLink, social) -%}
                                {% if streamLink is defined %}
                                <p class="other-links">
                                    <img src="../{{ social.icon }}" width="32" height="32" class="social-icon-scale">
                                    {% if streamLink.comingSoon is defined %}
                                        <span class="other-links">Coming Soon!</span>
                                    {% else %}
                                        <a href="{{ streamLink.link }}" class="other-links" target="_blank">{{ streamLink.type }}</a>
                                    {% endif %}
                                </p>
                                {% endif %}
                            {%- endmacro %}

                            {{ streamLink(song.streamLinks.youtubeLink, site.nitroguy.socials.youtube) }}
                            {{ streamLink(song.streamLinks.soundcloudLink, site.nitroguy.socials.soundcloud) }}
                            {{ streamLink(song.streamLinks.spotifyLink, site.nitroguy.socials.spotify) }}
                            {{ streamLink(song.streamLinks.appleMusicLink, site.nitroguy.socials.appleMusic) }}
                            {{ streamLink(song.streamLinks.newgroundsLink, site.nitroguy.socials.newgrounds) }}
                            {{ streamLink(song.streamLinks.iTunesLink, site.nitroguy.socials.iTunes) }}
                            {{ streamLink(song.streamLinks.pandoraLink, site.nitroguy.socials.pandora) }}
                            {{ streamLink(song.streamLinks.deezerLink, site.nitroguy.socials.deezer) }}
                            {{ streamLink(song.streamLinks.tidalLink, site.nitroguy.socials.tidal) }}
                            {{ streamLink(song.streamLinks.amazonMusicLink, site.nitroguy.socials.amazonMusic) }}
                            {{ streamLink(song.streamLinks.iHeartRadioLink, site.nitroguy.socials.iHeartRadio) }}
                        </h3>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br>
    <br>
    <footer>
        <a class="main-site" href="../index.html#music">Main Site</a>
    </footer>

    {{ site.footer }}

</body>

</html>